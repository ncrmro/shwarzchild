{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "baseUrl": "./",
    "paths": {
      "config": [
        "config"
      ],
      "screens": [
        "screens"
      ],
      "components": [
        "screens/App/components"
      ]
    }
  },
  "exclude": [
    "tmp",
    "dist",
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}